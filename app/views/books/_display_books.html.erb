<h1>Ahoy books!</h1>
<br>
<br>

<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>Cover</th>
		<th>Title</th>
		<th>Author</th>
		<th>Year</th>
		<th>ISBN</th>
	</tr>

	<% @books.each do |book| %>
		<tr>

			<% if book.cover_art %>
				<td><img src="<%= book.cover_art %>"/></td>
			<% elsif book.avatar %>
				<td><img src="<%= book.avatar.thumb %>"/></td>
			<% end %>	
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.year %></td>
			<td><%= book.ISBN %></td>
		</tr>
	<% end %>
</table>
<br>
