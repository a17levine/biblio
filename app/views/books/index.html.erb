<h1>Ahoy books!</h1>
<br>
<br>

<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Author</th>
		<th>Year</th>
		<th>ISBN</th>
	</tr>

	<% @books.each do |book| %>
		<tr>
			<td><%= book.id %></td>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.year %></td>
			<td><%= book.ISBN %></td>
		</tr>
	<% end %>
</table>